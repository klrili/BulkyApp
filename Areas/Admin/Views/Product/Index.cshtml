@model List<Product>
<div class="container">
    <div class="row p-4">
        <div class="col-6">
            <h2>Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" asp-controller="Product" class="btn btn-outline-success">
                <i class="bi bi-plus-circle"></i>
                <span>Add Product</span>
            </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category</th>
            <th>Title</th>
            <th>Description</th>
            <th>ISBN</th>
            <th>Author</th>
            <th>List Price</th>
            <th>Price</th>
            <th>Price 50</th>
            <th>Price 100</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @if (item.Category is not null)
                {
                    <td>@item.Category.Name</td>
                } else
                {
                    <td></td>

                }
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.ISBN</td>
                <td>@item.Author</td>
                <td>@item.ListPrice</td>
                <td>@item.Price</td>
                <td>@item.Price50</td>
                <td>@item.Price100</td>


                <td>
                    <div class="btn-group w-75" role="group">
                        <a asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-warning mx-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>