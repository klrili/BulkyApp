@model List<Category>
<div class="container">
    <div class="row p-4">
        <div class="col-6 ">
            <h2>
                Category list
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-outline-success">
                <i class="bi bi-plus-circle"></i>
                Add Category
            </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td>
                    <div class="btn-group w-75" role="group">
                        <a asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-warning mx-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>